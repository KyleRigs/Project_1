<!-- app/views/tasks/index.html.erb -->

<h1>Tasks List</h1>

<% if @task.errors.any? %>
  <div class="alert alert-danger">
    <h4><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h4>
    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if notice %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<%= form_with(model: @task, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <%= form.submit "Add Task", class: "btn btn-primary mt-2" %>
<% end %>

<ul class="list-group mt-4">
  <% @tasks.each do |task| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= task.name %>
      <div class="d-flex gap-2">
        <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-warning btn-sm' %>
        <%= button_to 'Delete', task_path(task),
              method: :delete,
              data: { confirm: 'Are you sure?' },
              form_class: 'd-inline',
              class: 'btn btn-danger btn-sm' %>
      </div>
    </li>
  <% end %>
</ul>
