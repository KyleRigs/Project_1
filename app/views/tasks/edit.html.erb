<!-- Add this to your layout (usually in app/views/layouts/application.html.erb) inside the <head> tag if not already included -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<h1 class="mb-4">Edit Task</h1>

<% if @task.errors.any? %>
  <div class="alert alert-danger">
    <h4><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h4>
    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if notice %>
  <div class="alert alert-success">
    <%= notice %>
  </div>
<% end %>

<!-- Form Card -->
<div class="card mb-4">
  <div class="card-header d-flex align-items-center">
    <i class="bi bi-pencil-square me-2"></i>
    <strong>Edit Task</strong>
  </div>
  <div class="card-body">
    <%= form_with(model: @task, local: true) do |form| %>
      <div class="row">
        <div class="col-md-4">
          <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="col-md-4">
          <%= form.label :priority %>
          <%= form.select :priority, options_for_select(['High', 'Medium', 'Low'], @task.priority), {}, class: "form-control" %>
        </div>
        <div class="col-md-4">
          <%= form.label :status %>
          <%= form.select :status, options_for_select(['Not Started', 'In Progress', 'On Hold', 'Completed'], @task.status), {}, class: "form-control" %>
        </div>
      </div>
      <div class="mt-3 text-end">
        <%= form.submit "Update Task", class: "btn btn-success" %>
        <%= link_to 'Back', tasks_path, class: "btn btn-secondary ms-2" %>
      </div>
    <% end %>
  </div>
</div>
