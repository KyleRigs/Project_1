<!-- app/views/dashboard/index.html.erb -->

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <h1 class="h3 mb-0 fw-bold">
      <i class="bi bi-speedometer2 me-2 text-primary"></i>Dashboard Overview
    </h1>
    <small class="text-muted">Task stats for your account</small>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="card text-white bg-primary mb-3 shadow">
      <div class="card-body">
        <h5 class="card-title">Total Tasks</h5>
        <p class="card-text fs-4"><%= @total_tasks %></p>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card text-white bg-success mb-3 shadow">
      <div class="card-body">
        <h5 class="card-title">Completed Tasks</h5>
        <p class="card-text fs-4"><%= @completed_tasks %></p>
      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card text-dark bg-warning mb-3 shadow">
      <div class="card-body">
        <h5 class="card-title">In Progress</h5>
        <p class="card-text fs-4"><%= @in_progress_tasks %></p>
      </div>
    </div>
  </div>
</div>
